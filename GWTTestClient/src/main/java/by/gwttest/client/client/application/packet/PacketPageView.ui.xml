<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:w='urn:import:by.gwttest.client.client.widgets'>

	<ui:style>
	.packetStyle {
		text-align: center;
	}
	
	.topTable {
		margin: auto;
		width: 400px;
		padding: 10px;
	}
	
	.innerTable {
		padding: 10px;
	}
	
	.sendBtn {
		width: 70px;
	}
	</ui:style>

	<g:FlowPanel styleName="{style.packetStyle}">
		<g:HTMLPanel>
			<h2>GWT TEST</h2>
		</g:HTMLPanel>
		<g:VerticalPanel styleName="{style.topTable}">
			<g:HorizontalPanel styleName="{style.innerTable}">
				<g:cell width="80px">
					<g:Label text="Server URL" />
				</g:cell>
				<g:cell width="200px">
					<g:TextBox ui:field="serverURL" />
				</g:cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.innerTable}">
				<g:cell width="80px">
					<g:Label text="Packet Size" />
				</g:cell>
				<g:cell width="200px">
					<w:ValueTextBox ui:field="packetSize" />
				</g:cell>
				<g:Button ui:field="sendBtn" styleName="{style.sendBtn}" />
			</g:HorizontalPanel>
			<g:TextArea ui:field="textLog" width="400px" height="400px" />
		</g:VerticalPanel>
	</g:FlowPanel>
</ui:UiBinder>